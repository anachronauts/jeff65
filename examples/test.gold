use std
use vic-ii

constant bdcolor: u16 = 0xd020
constant bgcolor: u16 = 0xd021
constant screen: u16 = 0x0400
constant colors: u16 = 0xd800
constant black: u8 = 0

/* this is a top-level comment */

let conv-tbl: u8[] = [0x80, 0x00, 0xc0, 0xe0, 0x40, 0xc0, 0x80, 0x80]
let msg: u8[] = "hello world! hello friends!"

isr flash
    let stash color: u8 = 1
    let stash frame: u8 = 0

    /* this is a comment */

    let mut k: u8 = 0
    while msg[k] != 0 do
        (screen + 0x01be)[k] = conv(msg[k])
        (colors + 0x01be)[k] = color
        k += 1
    end

    if frame == 7 then
        frame = 0
        color += 1
        if color == 9 then
            color = 1
        end
    else
       frame += 1
       return
    end

endisr

fun conv(c: u8) -> u8
    return conv-tbl[c >> 5]
endfun

fun clear-screen()
    @bdcolor = black
    @bgcolor = black
    for x: u8 in 0 to 256 do
        (screen + 0x0000)[x] = 0
        (screen + 0x0100)[x] = 0
        (screen + 0x0200)[x] = 0
        (screen + 0x0300)[x] = 0
    end
endfun

fun main()
    clear-screen()
    vic-ii.set-isr(flash, 0)
    std.spin-forever()
endfun